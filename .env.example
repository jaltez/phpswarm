# PHPSwarm Environment Configuration

# LLM Providers
# =============

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2048

# Tools Configuration
# ==================

# Web Search Tool
SEARCH_API_KEY=your_google_search_api_key_here
SEARCH_ENGINE_ID=your_google_search_engine_id_here
SEARCH_SERVICE=google

# Weather Tool
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_SERVICE=openweathermap

# File System Tool
FILESYSTEM_BASE_DIRECTORY=storage
FILESYSTEM_ALLOWED_OPERATIONS=read,write,append,delete,exists,list_directory,create_directory,delete_directory

# Memory Configuration
# ===================

# Memory Provider (array, redis, sqlite)
MEMORY_PROVIDER=array
MEMORY_TTL=3600

# Redis (for Redis Memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PREFIX=phpswarm:

# SQLite (for SQLite Memory)
SQLITE_DB_PATH=storage/memory.sqlite
SQLITE_TABLE_NAME=memory

# Logging & Monitoring
# ===================
LOG_LEVEL=debug
LOG_PATH=logs/phpswarm.log
LOG_FORMAT=Y-m-d H:i:s
LOG_INCLUDE_TIMESTAMPS=true

# Workflow Configuration
# =====================
WORKFLOW_MAX_PARALLEL_STEPS=1
WORKFLOW_CREATE_LOGGER=true
WORKFLOW_CREATE_MONITOR=true 